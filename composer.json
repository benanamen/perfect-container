{
  "name": "krubio/perfect-container",
  "description": "A lightweight, reflection-based dependency injection container designed for simplicity and ease of use, enabling automatic resolution and management of class dependencies throughout your PHP application.",
  "keywords": [
    "Autowire",
    "Attribute Routing",
    "Container",
    "DI Container",
    "Dependency Injection Container"
  ],
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Kevin Rubio",
      "email": "ducatikevin@yahoo.com",
      "homepage": "https://github.com/benanamen",
      "role": "Developer"
    }
  ],
  "autoload": {
    "psr-4": {
      "PerfectApp\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Unit\\": "tests/Unit/",
      "Fixtures\\": "tests/Fixtures/"
    }
  },
  "minimum-stability": "stable",
  "require": {
    "php": ">=8.2.0"
  },
  "require-dev": {
    "codeception/codeception": "^5.0",
    "codeception/module-asserts": "*",
    "phpstan/phpstan": "^1.10"
  }
}